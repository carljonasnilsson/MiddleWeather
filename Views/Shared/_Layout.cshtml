<!DOCTYPE html>
<html lang="sv">
<head>
    <!-- ======================================================================== -->
    <!-- METAINFORMATION OCH TITLE                                               -->
    <!-- ======================================================================== -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nordic Weather Demo</title>
    
    <!-- Lite PWA grejer -->
    <meta name="theme-color" content="#74b9ff">
    <meta name="apple-mobile-web-app-capable" content="yes">
    
    <!-- ======================================================================== -->
    <!-- CSS FÖR VÄDER UI                                                        -->
    <!-- ======================================================================== -->
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #74b9ff, #0984e3);
            min-height: 100vh;
            color: #2d3436;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }
        
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .header h1 {
            margin: 0;
            color: #2d3436;
            font-size: 2.5em;
            font-weight: 300;
        }
        
        .weather-card {
            background: linear-gradient(135deg, #ffffff, #f8f9fa);
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            border: 1px solid #e9ecef;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }
        
        .weather-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }
        
        .weather-icon {
            font-size: 4em;
            margin-bottom: 15px;
        }
        
        .temperature {
            font-size: 3em;
            font-weight: 300;
            margin: 10px 0;
            color: #2d3436;
        }
        
        .description {
            font-size: 1.2em;
            color: #636e72;
            margin-bottom: 15px;
        }
        
        .details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-top: 20px;
        }
        
        .detail-item {
            background: rgba(116, 185, 255, 0.1);
            padding: 10px;
            border-radius: 8px;
            text-align: center;
        }
        
        .detail-label {
            font-size: 0.9em;
            color: #636e72;
            margin-bottom: 5px;
        }
        
        .detail-value {
            font-weight: 600;
            color: #2d3436;
        }
        
        .provider-data {
            display: none;
            margin-top: 20px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
        }
        
        .provider-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            margin: 5px 0;
            background: white;
            border-radius: 8px;
            border-left: 4px solid #74b9ff;
        }
        
        .provider-name {
            font-weight: 600;
            color: #2d3436;
        }
        
        .provider-temp {
            font-size: 1.2em;
            color: #74b9ff;
        }
        
        .time-info {
            text-align: center;
            margin-bottom: 20px;
            padding: 15px;
            background: rgba(116, 185, 255, 0.1);
            border-radius: 10px;
        }
        
        .current-time {
            color: #636e72;
            font-size: 0.9em;
        }
        
        .showing-time {
            color: #2d3436;
            font-size: 1.1em;
            font-weight: 600;
        }
        
        .toggle-btn {
            background: #74b9ff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
            font-size: 0.9em;
            margin-top: 15px;
            transition: background 0.3s ease;
        }
        
        .toggle-btn:hover {
            background: #0984e3;
        }
    </style>
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>
    
    <!-- ======================================================================== -->
    <!-- javascript för att toggla provider data                                 -->
    <!-- ======================================================================== -->
    <script>
        // funktion för att visa/dölja provider data
        function toggleProviderData() {
            var providerData = document.getElementById('providerData');
            var toggleBtn = document.getElementById('toggleBtn');
            
            // kolla om det är dolt eller inte
            if (providerData.style.display === 'none' || providerData.style.display === '') {
                // visa data
                providerData.style.display = 'block';
                toggleBtn.textContent = 'Dölj individuell data';
            } else {
                // dölj data  
                providerData.style.display = 'none';
                toggleBtn.textContent = 'Visa individuell data från providers';
            }
        }

        // lätt animation när man hovrar över kort
        function addHoverEffects() {
            var cards = document.querySelectorAll('.weather-card');
            cards.forEach(function(card) {
                card.addEventListener('mouseenter', function() {
                    card.style.transform = 'translateY(-3px)';
                });
                card.addEventListener('mouseleave', function() {
                    card.style.transform = 'translateY(0)';
                });
            });
        }

        // kör när sidan laddats
        document.addEventListener('DOMContentLoaded', function() {
            addHoverEffects();
        });
    </script>
</body>
</html>